<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppNav2.Vistas.LogIn"
             Title="LogIn">
    <StackLayout Padding="20">
        <Image Source="logo.png" HeightRequest="100" HorizontalOptions="Center"/>
        <Label Text="Cloud Bank"
               FontSize="24"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               FontAttributes="Bold" />
        <Entry Placeholder="Usuario" Margin="0,10,0,0" />
        <Entry Placeholder="Contraseña" IsPassword="True" />
        <Grid ColumnDefinitions="Auto, Auto">
            <CheckBox x:Name="SaveUserCheckBox" 
                   IsChecked="false"
                   Margin="0,10,0,0"
                      Grid.Column="0"/>

            <Label Text="Guardar Usuario"
               VerticalOptions="Center"
               HorizontalOptions="Start" 
                   Grid.Column="1"/>
        </Grid>
        <Button Text="Identificarse" Margin="0,20,0,0" Clicked="IdentificarseBtn" />
        <Label Text="¿Olvidó su contraseña?"
               HorizontalOptions="Center"
               TextColor="Blue"
               Margin="0,10,0,0">
        </Label>
    </StackLayout>
</ContentPage>